            <link href="{{asset('css/main.css')}}" rel="stylesheet">

            <link rel="stylesheet" href="../assets/vendor/fonts/boxicons.css"/>
            <link rel="stylesheet" href="../assets/vendor/css/core.css" class="template-customizer-core-css"/>
        {% endblock %}
    </head>
    <body>
        <div id="preloader">
            <img src={{asset('img/logo.png')}}  width="250" height="200"> 
        </div>
        {% block header %}
            <header  id="header" class="header d-flex align-items-center fixed-top">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <a href="indexp.html" class="logo d-flex align-items-center  me-auto me-lg-0">
                        <img src={{asset('img/logo.png')}} alt="" width="100" height="300"> 

                    </a>
            <nav id="navbar" class="navbar">
    <ul>
        <li><a href="indexp.html" {% if app.request.attributes.get('_route') == 'nom_de_votre_route_accueil' %}class="active"{% endif %}>Accueil</a></li>
        <li class="deroulant"><a href="{{ path('app_shopping') }}" {% if app.request.attributes.get('_route') == 'app_shopping' %}class="active"{% endif %}>Magasin</a></li>
        <li><a href="{{ path('app_list_eventt') }}" {% if app.request.attributes.get('_route') == 'app_list_eventt' %}class="active"{% endif %}>Evènement</a></li>
        <li><a href="{{ path('app_publication_index') }}" {% if app.request.attributes.get('_route') == 'app_publication_index' %}class="active"{% endif %}>Poste</a></li>               
        <li><a href="{{ path('app_reclamation_index') }}" {% if app.request.attributes.get('_route') == 'app_reclamation_index' %}class="active"{% endif %}>Réclamation</a></li>
    </ul>                    
</nav>

                    <div class="header-social-links">
                    
                    <a href="{{path('app_consult_panier')}}"><img class="img-fluid" src={{asset('img/unnamed.png')}} width="30px";height="30px">
                    <span style=" background: #ffc107;font-size: 14px;color: #fff;">[{{app.session.get('total')|number_format('3',',','.')}} DT]</span>
                   <p><span style=" background: #ffc107;font-size: 14px;color: #fff;border-radius: 10% /50%;;">[{{app.session.get('nb')}}] </span> </p>
                    
          </a>
    <a class="nav-link hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown" aria-expanded="true">
        <div class="avatar">
            {% if app.user %}
                <img src="../assets/pdp/{{ app.user.image }}" alt="" class="w-px-40 h-auto rounded-circle">
            {% else %}
                <!-- Placeholder for avatar -->
                <img src="../assets/default_avatar.jpg" alt="Default Avatar" class="w-px-40 h-auto rounded-circle">
            {% endif %}
        </div>
    </a>

    {% if app.user %}
        <a href="{{ path('app_profile') }}" class="">{{ app.user.name }} {{ app.user.prename }}</a>
        <a href="{{ path('app_logout') }}" class="">Logout</a>
    {% else %}
        <a href="{{ path('app_login') }}" class="">Login</a>
        <!-- You may add a registration link here if needed -->
    {% endif %}
</div>
    
                </div>
            </header>
        {% endblock %}
                <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
<br><br><br>
        <div class="container text-center" style="margin-top: 50px;margin-bottom:200px;">
            {% block body %}

