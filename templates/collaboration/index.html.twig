{% extends 'base.html.twig' %}

{% block title %}Collaboration index{% endblock %}

{% block body %}
    <h1>Collaboration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Disponibilite</th>
                <th>Competence</th>
                <th>Cv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collaboration in collaborations %}
            <tr>
                <td>{{ collaboration.id }}</td>
                <td>{{ collaboration.disponibilite }}</td>
                <td>{{ collaboration.competence }}</td>
                <td>   {% if collaboration.cv %}
                    <a href="{{ asset('cv/' ~ collaboration.cv) }}" download="{{ collaboration.cv }}">Télécharger CV</a>
                {% else %}
                    Aucun CV téléchargé
                {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_collaboration_show', {'id': collaboration.id}) }}">show</a>
                    <a href="{{ path('app_collaboration_edit', {'id': collaboration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
