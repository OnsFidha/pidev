<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>



<div class="container mt-5">
    <div class="card shadow p-4">
        <h1 class="mb-4 text-center">Évènement</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <table class="table text-center">
            <tr>
                <td>{{ form_label(form.nom) }}</td>
                <td>{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="text-danger">{{ form_errors(form.nom) }}</td>
            </tr>

            <tr>
                <td>{{ form_label(form.description) }}</td>
                <td>{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="text-danger">{{ form_errors(form.description) }}</td>
            </tr>

            <tr>
                <td>{{ form_label(form.lieu) }}</td>
                <td>{{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="text-danger">{{ form_errors(form.lieu) }}</td>
            </tr>

            <tr>
                <td>{{ form_label(form.image) }}</td>
                <td>{{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="text-danger">{{ form_errors(form.image) }}</td>
            </tr>

            <tr>
                <td>{{ form_label(form.date_debut) }}</td>
                <td>
                    {{ form_widget(form.date_debut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_debut) }}
                </td>
            </tr>

            <tr>
                <td>{{ form_label(form.date_fin) }}</td>
                <td>
                    {{ form_widget(form.date_fin, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_fin) }}
                </td>
            </tr>

            <tr>
                <td>{{ form_label(form.nbre_max) }}</td>
                <td>{{ form_widget(form.nbre_max, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2" class="text-danger">{{ form_errors(form.nbre_max) }}</td>
            </tr>
        </table>

        <button type="submit" class="btn custom-btn-warning mx-2">Enregistrer</button>

        {% if form_errors(form) %}
            <div class="text-danger mt-3 ">{{ form_errors(form) }}</div>
        {% endif %}

        {{ form_end(form) }}
    </div>
</div>
<style>
 .custom-btn-warning {
        background-color: #eba081;
        color: #ffffff;
        border-color: #eba081;
    }


    .custom-btn-warning:hover {
        background-color: #eb7a4b;
        color: #ffffff;
        border-color: #eb7a4b;
    }
    
    </style>