{% extends 'base.html.twig' %}

{% block title %}Évènement{% endblock %}

{% block body %}
  <section id="event-details" class="event-details py-5">
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-6">
                <img src="{{ asset('uploads/images/' ~ event.image) }}" class="img-fluid rounded" alt="Event Image">
            </div>
            <div class="col-lg-6">
                <div class="event-info" >
                    <h2 class="fw-bold">{{ event.nom }}</h2>
                     <ul class="list-group list-group-flush custom-bg-list">
                        <li class="list-group-item"><strong>Lieu:</strong> <span class="text-dark">{{ event.lieu }}</span></li>
                        <li class="list-group-item"><strong>Participants:</strong> <span class="text-dark">{{ event.getNbreMax }}</span></li>
                        <li class="list-group-item"><strong>Date de début:</strong> <span class="text-dark">{{ event.getDateDebut|date('d F Y') }}</span></li>
                        <li class="list-group-item"><strong>Date de fin:</strong> <span class="text-dark">{{ event.getDateFin|date('d F Y') }}</span></li>
                    </ul>
                    <p class="mt-3">{{ event.description }}</p>
                </div>
            </div>
        </div>
    </div>
</section>

  <div class="container d-flex justify-content-between align-items-center my-3">
    <a href="{{ path('app_list_eventt') }}" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Retour
    </a>
    
    <div class="d-flex">
     {% if event.getIdUser() == app.user %} 
        <a href="{{ path('editevent', {'id': event.id}) }}" class="btn custom-btn-warning mx-2">
            <i class="bi bi-pencil"></i> Modifier
        </a>
        {% endif %}
        
             {% if event.getIdUser() == app.user %} 
            {{ include('evenement/delete.html.twig') }}
        {% endif %}
         {% if event.getIdUser() != app.user %} 
        <a href="#" class="btn custom-btn-info mx-2" id="participerBtn" data-event-id="{{ event.id }}">
            <i class="bi bi-person-plus"></i> Participer
        </a>
        <a href="{{ path('app_feedback_new', {'id': event.id}) }}" class="btn custom-btn-success mx-2">
            <i class="bi bi-chat-dots"></i> Ajouter un feedback
        </a>
         {% endif %}
    </div>
</div>

  <section id="testimonials" class="testimonials" style="margin-top: 30px;">
    <div class="container">
      <div class="section-header">
        <p>Les feedbacks</p>
      </div>

      {% for feedb in fb %}
        <section class="feedback-section mt-1" >
          <div class="container my-5 py-5 text-dark">
            <div class="row d-flex justify-content-center">
              <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card mb-3">
                  <div class="card-body">
                    <div class="d-flex flex-start">
                      <img class="rounded-circle shadow-1-strong me-3" src="../assets/pdp/{{feedb.getIdUser().getImage()}}" alt="avatar" width="40" height="40" />
                      <div class="w-100">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                          <h6 class="text-primary fw-bold mb-0">
                            {{ feedb.getIdUser().getName() }} {{ feedb.getIdUser().getPrename() }}
                            <span class="text-dark ms-2">{{ feedb.text }}</span>
                          </h6>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                          <p class="small mb-0" style="color: #aaa;">
                                     {% if feedb.getIdUser() == app.user %}
                            <a href="{{ path('app_feedback_delete', {'id': feedb.id}) }}" class="link-grey"><i class="bi bi-trash"></i> Supprimer</a> •
                            <a href="{{ path('app_feedback_edit', {'id': feedb.id}) }}" class="link-grey"><i class="bi bi-pencil"></i> Modifier</a>
                          {% endif %}
                          </p>
                          <div class="d-flex flex-row">
                            <i class="fas fa-star text-warning me-2"></i>
                            <i class="far fa-check-circle" style="color: #aaa;"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      {% endfor %}
       {{ knp_pagination_render(fb) }}
    </div>
  </section>
  <style>
.pagination .page-item.active .page-link {
    background-color: #f29d88;
    border-color: #f29d88;
    color: #ffffff;
}

.pagination .page-item .page-link {
    background-color: #ffffff;
    border-color: #ffffff;
    color: #f29d88;
}


    .card {
        border-radius:30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow for a lifted effect */
        margin-top:-90px;
    }

    .custom-bg-list .list-group-item {
        background-color: #f8f9fa; /* Choose your desired background color */
    }

       

    .custom-btn-warning {
        background-color: #eba081;
        color: #ffffff;
        border-color: #eba081;
    }

    .custom-btn-danger {
        background-color: #eba081;
        color: #ffffff;
        border-color: #eba081;
    }

    .custom-btn-info {
        background-color: #eba081;
        color: #ffffff;
        border-color: #eba081;
    }

    .custom-btn-success {
        background-color: #eba081;
        color: #ffffff;
        border-color: #eba081;
    }

     .custom-btn-warning:hover {
        background-color: #eb7a4b;
        color: #ffffff;
        border-color: #eb7a4b;
    }

    .custom-btn-danger:hover {
        background-color: #eb7a4b;
        color: #ffffff;
        border-color: #eb7a4b;
    }

    .custom-btn-info:hover {
        background-color: #eb7a4b;
        color: #ffffff;
        border-color: #eb7a4b;
    }

    .custom-btn-success:hover {
        background-color: #eb7a4b;
        color: #ffffff;
        border-color: #eb7a4b;
    }
</style>

  <script>
    document.getElementById('participerBtn').addEventListener('click', function(event) {
        // Prevent the default link behavior
        event.preventDefault();

        // Get the event ID from the data attribute
        var eventId = this.getAttribute('data-event-id');

        // Show a confirmation dialog
        var isConfirmed = confirm('Voulez-vous vraiment participer ?');

        // If confirmed, redirect to the participation page
        if (isConfirmed) {
            window.location.href = "{{ path('app_particip_new', {'id': event.id}) }}";
        }
    });


    

    
</script>

{% endblock %}
