{% extends 'base.html.twig' %}

{% block title %}Modifier Feedback{% endblock %}

{% block body %}
    <div class="container mt-5">
       <h1 class="mb-4 text-center" style="color: #ed724c; font-size: 2.5rem; font-weight: bold;">Modifier feedback</h1>

        <div class="card p-4 shadow">
            {% include 'feedback/_form.html.twig' with {'button_label': 'Modifier', 'id': feedback.id} %}
        </div>


      <div class="row mt-3">
    <div class="col-lg-1">
        <a href="{{ path('event_details', {'id': feedback.getIdEvenement().id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>    
        </a>
    </div>
    <div class="col-md-2">
        {{ include('feedback/_delete_form.html.twig') }}
    </div>

    </div>
{% endblock %}
