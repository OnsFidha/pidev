{% extends 'baseBack.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

<div style="margin-top:50px;width:50%;margin-left:20%;">

    <table class="table">
        <tbody>
           
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
             
                <td> <img src='{{ asset('uploads/images/') }}{{produit.image}}'alt={{ produit.description }} width="300" height="300" /> </td>
            </tr>
           
        </tbody>
    </table>

   

   


   
  
    </div>
{% endblock %}
