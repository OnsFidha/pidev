<form method="post" action="{{ path('app_publication_delete', {'id': publication.id}) }}" onsubmit="return confirm('Êtes-vous sûr?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> <!-- Icône de suppression -->
    </button>
</form>
