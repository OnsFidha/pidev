{% extends 'base.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
    <h1>Publication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Text</th>
                <th>Lieu</th>
                <th>Date_creation</th>
                <th>Date_modification</th>
                <th>Avis</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.type }}</td>
                <td>{{ publication.text }}</td>
                <td>{{ publication.lieu }}</td>
                <td>{{ publication.dateCreation ? publication.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ publication.dateModification ? publication.dateModification|date('Y-m-d') : '' }}</td>
                <td>{{ publication.avis }}</td>
                <td>{{ publication.photo }}</td>
                <td>
                    <a href="{{ path('app_publication_show', {'id': publication.id}) }}">show</a>
                    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publication_new') }}">Create new</a>
{% endblock %}
