{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<div class='container'>
    <h1>Publication</h1>
    {% if publication.type == 'offre' %}
    {% if publication.getIdUser() == app.user %} 
        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('app_collaboration_index', {'id': publication.id}) }} "class="btn" style="background-color: #F9A936; border-color: #F9A936;">
            <i class="bi bi-people-fill me-2"></i>Liste des collaborateurs
            </a>
        </div>
    {% endif %}
      {% endif %}

    <section id="about" class="about">
        <div class="container">
            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="{{ asset('pub/' ~ publication.photo) }}" class="img-fluid" alt="Paysage">
                </div>
                <div class="col-lg-5 content">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Type:</strong> <span>{{ publication.type }}</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Lieu:</strong> <span>{{ publication.lieu }}</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Date de création:</strong> <span>{{ publication.getDateCreation|date('d F Y') }}</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Date de modification:</strong> <span>{{ publication.getDateModification|date('d F Y') }}</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        {{ publication.text }} 
                    </p>
                </div>
            </div>
        </div>
    </section>

<style>
    .btn-group  {
        gap: 15px; 
    }

    .btn-group .btn {
        border-radius: 10px !important; /* Modifier le rayon selon vos préférences */
    }
</style>
   
</style>
<br><br>
<div class="btn-group" role="group">
    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="btn btn-primary" style="background-color: #F26A77;border-color:#F26A77">
        <i class="fas fa-edit"></i>
    </a>
    <a id="comment-link" href="#" class="btn btn-success" data-toggle="modal" data-target="#commentModal" style="background-color: #91DAF0; border-color:#91DAF0">
        <i class="fas fa-comment"></i>
    </a>
    {{ include('publication/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
</div>

<br><br>

    {% if publication.type == 'offre' %}
        <a href="{{ path('app_collaboration_new', {'id': publication.id}) }}" class="btn btn-primary" style="background-color: #F9A936;border-color: #F9A936">
            Collaborer
        </a>
    {% endif %}

    <section id="testimonials" class="testimonials">
      <div class="container">

        <div class="section-header">
          <p>Les commentaires</p>
          <h2 style="color: black;">Mais qu'est ce qu'ils disent c'est du bla bla bla !!</h2>
        </div>
<div class="slides-3 swiper swiper-initialized swiper-horizontal swiper-pointer-events swiper-backface-hidden">
    <div class="swiper-wrapper"  style="height:300px;">
        {% for commentaire in commentaires %}
            <div class="swiper-slide" role="group" aria-label="{{ loop.index }} / {{ commentaires|length }}">
                <div class="testimonial-item" style="text-align: center;">
                    <p > ~~ {{ commentaire.text }} ~~</p>
                    <br><br><br>
                    <div class="profile ">
                        {# <img src="assets/img/testimonials/testimonials-5.jpg" class="testimonial-img" alt=""> #}
                        <h3 >Nom</h3>
                        <h4 >Prenom</h4>
                    </div>
                          <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">Edit</a>
                              {{ include('commentaire/_delete_form.html.twig') }}

                </div>
            </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination" style='color:black'></div>
</div>

    <div class="modal fade" id="commentModal" width='400px' tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="commentModalLabel">Ajouter un commentaire</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(commentForm) }}
                    {{ form_label(commentForm.text) }}<br>
                    {{ form_widget(commentForm.text, {'attr': {'class': 'form-control'}}) }}
                    {% if errors is defined and errors is not empty %}
                        <div class="alert alert-danger">
                            {% for error in errors %}
                                {{ error.message }}
                            {% endfor %}
                        </div>
                    {% endif %}
                    <br>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(commentForm) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('#comment-link').click(function(e) {
                e.preventDefault(); // Prevent the link from following its URL
                $('#commentModal').modal('show'); // Show the modal
            });
        });
    </script>

    </div>
{% endblock %}
