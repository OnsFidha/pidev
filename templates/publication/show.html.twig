{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
<div class='container'>
    <h1>Publication</h1>
    {% if publication.type == 'offre' %}
    {% if publication.getIdUser() == app.user %} 
        <div class="d-flex justify-content-end mb-3">
            <a href="{{ path('app_collaboration_index', {'id': publication.id}) }} "class="btn" style="background-color: #F9A936; border-color: #F9A936;">
            <i class="bi bi-people-fill me-2"></i>Liste des collaborateurs
            </a>
        </div>
    {% endif %}
      {% endif %}

    <section id="about" class="about">
        <div class="container">
            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="{{ asset('pub/' ~ publication.photo) }}" class="img-fluid" alt="Paysage">
                </div>
                <div class="col-lg-5 content">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Type:</strong> <span>{{ publication.type }}</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Lieu:</strong> <span>{{ publication.lieu }}</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Date de création:</strong> <span>{{ publication.getDateCreation|date('d F Y') }}</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Date de modification:</strong> <span>{{ publication.getDateModification|date('d F Y') }}</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        {{ publication.text }} 
                    </p>
                </div>
            </div>
        </div>
    </section>

<style>
    .btn-group  {
        gap: 15px; 
    }

    .btn-group .btn {
        border-radius: 10px !important; /* Modifier le rayon selon vos préférences */
    }
</style>
   
</style>
<br><br>
 {% if publication.getIdUser() == app.user %} 
<div class="btn-group" role="group">
    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="btn btn-primary" style="background-color: #F26A77;border-color:#F26A77">
        <i class="fas fa-edit" style='color:white'></i>
    </a>
    {% endif %}
    <a id="comment-link" href="#" class="btn btn-success" data-toggle="modal" data-target="#commentModal" style="background-color: #91DAF0; border-color:#91DAF0">
        <i class="fas fa-comment"></i>
    </a>
     {% if publication.getIdUser() == app.user %} 
    {{ include('publication/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
    {% endif %}
</div>

<br><br>
 {% if publication.getIdUser() != app.user %} 
    {% if publication.type == 'offre' %}
        <a href="{{ path('app_collaboration_new', {'id': publication.id}) }}" class="btn btn-primary" style="background-color: #F9A936;border-color: #F9A936">
            Collaborer
        </a>
    {% endif %}
    {% endif %}

    <section id="testimonials" class="testimonials">
      <div class="container">

        <div class="section-header">
          <p>Les commentaires</p>
          <h2 style="color: black;">Mais qu'est ce qu'ils disent c'est du bla bla bla !!</h2>
        </div>
        <center>
          <div id="carouselExampleIndicators" class="carousel slide text-center" data-ride="carousel" style="max-width: 600px;">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <!-- Vos diapositives existantes générées par la boucle Twig -->
        {% for commentaire in commentaires %}
        <div class="carousel-item {% if loop.first %}active{% endif %}">
            <div class="testimonial-item" style="max-width: 300px;max-height: 100px;  margin: auto; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                <p  class='user-name'>~~ {{ commentaire.text }} ~~</p>
                <div class="profile">
                <br> by
                    <p>{{ commentaire.getIdUser().getName() }} {{ commentaire.getIdUser().getPrename() }}</p>
                
                </div>
                <style>
                    .user-name {
                        font-weight: bold; /* Définir le texte en gras */
                        color: black;  /* Définir la couleur du texte */
                        font-size: 16px; /* Définir la taille de la police */
                        margin-bottom: 5px; /* Ajouter un espace en bas */
                    }
                </style>
                
               
                <center>
                     {% if commentaire.getIdUser() == app.user %} 
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary" style="background-color: #F26A77; border-color:#F26A77;">
                        <i class="fas fa-edit" style="color: white;"></i>
                    </a>
                    {% endif %}<br>
                    {{ include('commentaire/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
                </center>
            </div>
        </div>
        {% endfor %}
    </div>
    <style>
        /* Styles personnalisés pour les icônes de contrôle précédent et suivant */
        .carousel-control-prev-icon, .carousel-control-next-icon {
            background-color: gray; /* Couleur de fond */
            color: #ffffff; /* Couleur de l'icône */
        }

        /* Styles personnalisés pour les icônes de contrôle lors du survol */
        .carousel-control-prev:hover .carousel-control-prev-icon,
        .carousel-control-next:hover .carousel-control-next-icon {
            background-color: #ff9999; /* Couleur de fond lors du survol */
        }
    </style>

    <!-- Ajoutez les boutons de navigation -->
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

        </center>



        <div class="modal fade" id="commentModal" width='400px' tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="commentModalLabel">Ajouter un commentaire</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(commentForm) }}
                        {{ form_label(commentForm.text) }}<br>
                        {{ form_widget(commentForm.text, {'attr': {'class': 'form-control'}}) }}
                        {% if errors is defined and errors is not empty %}
                            <div class="alert alert-danger">
                                {% for error in errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        <br>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                        {{ form_end(commentForm) }}
                    </div>
                </div>
            </div>
        </div>

    <script>
        $(document).ready(function() {
            $('#comment-link').click(function(e) {
                e.preventDefault(); // Prevent the link from following its URL
                $('#commentModal').modal('show'); // Show the modal
            });
        });
    </script>

    </div>
{% endblock %}
