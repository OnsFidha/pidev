{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ publication.type }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ publication.text }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ publication.lieu }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ publication.dateCreation ? publication.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modification</th>
                <td>{{ publication.dateModification ? publication.dateModification|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Avis</th>
                <td>{{ publication.avis }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ publication.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publication_index') }}">back to list</a>

    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">edit</a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
