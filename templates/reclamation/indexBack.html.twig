{% extends 'baseBack.html.twig' %}

{% block title %}Réclamations{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-wXA+RO4RX+vhIS/JvFkzO4vxKrX9+T5BTKIWkrz1t50vDSxNEKz3vPEKi//m+Ahg" crossorigin="anonymous">
    <style>
        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .custom-table th, .custom-table td {
            padding: 8px;
            border-bottom: 1px solid #dee2e6;
        }

        .custom-table th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
            text-align: left;
            text-transform: uppercase;
        }

        .custom-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .custom-table tbody tr:hover {
            background-color: #e9ecef;
        }

        .btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-block;
            margin-right: 5px;
        }

        .btn-show {
            background-color: #28a745;
            color: #fff;
        }

        .btn-reply {
            background-color: #007bff;
            color: #fff;
        }

        .btn-non-traite {
            background-color: #dc3545; /* Rouge */
            color: #fff;
        }

        .btn:hover {
            filter: brightness(90%);
        }
    </style>
{% endblock %}

{% block body %}
    <center><h1>Liste des Réclamations</h1></center>
    <div style="margin: 20px;">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>État</th>
                    <th>Date de création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reclamation in reclamations %}
                    <tr {% if not reclamation.etat %}style="color: #F26A77;"{% endif %}>
                        <td>{{ reclamation.id }}</td>
                        <td>{{ reclamation.type }}</td>
                        <td>{{ reclamation.description }}</td>
                    
                        <td>{{ reclamation.etat ? 'Traitée' : 'Non traitée' }}</td>
                        <td>{{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d') : '' }}</td>
                        <td>
                            
                                {% if reclamation.etat %}
                                    <a href="{{ path('app_reclamation_show2', {'id': reclamation.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i> Voir</a>
                                    <a href="{{ path('app_reclamation_reponse_show2', {'id': reclamation.id}) }}" class="btn btn-warning"><i class="fas fa-reply"></i> Réponse</a>
                                {% else %}
                                    <a href="{{ path('app_reclamation_show2', {'id': reclamation.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i> Voir</a>
                                    <a href="{{ path('app_reponse_new', {'id': reclamation.id}) }}" class="btn btn-success"><i class="fas fa-comments"></i> Répondre</a>
                                {% endif %}
                            
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
