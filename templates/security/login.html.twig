<!DOCTYPE html>
<html lang="en" class="light-style customizer-hide" dir="ltr" data-theme="theme-default" data-assets-path="../assets/" data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"/>
    <title>Login</title>
    <meta name="description" content=""/>
    <link rel="icon" type="image/x-icon" href="../assets/img/favicon/favicon.ico"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="../assets/vendor/fonts/boxicons.css"/>
    <link rel="stylesheet" href="../assets/vendor/css/core.css" class="template-customizer-core-css"/>
    <link rel="stylesheet" href="../assets/vendor/css/theme-default.css" class="template-customizer-theme-css"/>
    <link rel="stylesheet" href="../assets/css/demo.css"/>
    <link rel="stylesheet" href="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css"/>
    <link rel="stylesheet" href="../assets/vendor/css/pages/page-auth.css"/>
    <script src="../assets/vendor/js/helpers.js"></script>
    <script src="../assets/js/config.js"></script>
</head>
<body>
<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <img id="randomArtImage" src="" width="300" height="542" alt="Random Art Image">
        <div class="authentication-inner">
            <div class="card">
                <div class="card-body">
                    <div class="app-brand justify-content-center">
                        <a href="indexp.html" class="app-brand-link gap-2">
                            <a><img src={{asset('img/logo.png')}}  width="85" height="50"> </a>
                        </a>
                    </div>
                    <h4 class="mb-2 text-center">Welcome to Artistool! ðŸš€</h4>
                    <p class="mb-4 text-center">Please sign-in to your account and start the adventure</p>
                    <form id="formAuthentication" class="mb-3" method="POST">
                        {% if error %}
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        {% if app.user %}
                        <div class="mb-3">
                            <div class="alert alert-secondary" role="alert">You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        </div>
                        {% endif %}
                        {% endif %}
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" value="{{ last_username }}" id="email" name="email" placeholder="Enter your email" autofocus/>
                        </div>
                        <div class="mb-2 form-password-toggle">
                            <div class="d-flex justify-content-between">
                                <label class="form-label" for="password">Password</label>
                                <a href="auth-forgot-password-basic.html">
                                </a>
                            </div>
                            <div class="input-group input-group-merge mb-4">
                                <input type="password" id="password" class="form-control" name="password" placeholder="Enter your password" aria-describedby="password"/>
                                <span class="input-group-text cursor-pointer">
                                            <i class="bx bx-hide"></i>
                                        </span>
                            </div>
                            {# token #}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="mb-3">
                                <button class="btn btn-primary d-grid w-100" type="submit">Sign in</button>
                            </div>
                        </form>

                        <p class="text-center">
                            <span>New on our platform?</span>
                            <a href="{{ path('app_register') }}">
                                <span>Create an account</span>
                            </a>
                        </p>
                        <p class="text-center">
                            <a href="{{ path('app_forgot_password_request') }}">
                                <span> forgot password? </span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="../assets/vendor/libs/jquery/jquery.js"></script>
<script src="../assets/vendor/libs/popper/popper.js"></script>
<script src="../assets/vendor/js/bootstrap.js"></script>
<script src="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
<script src="../assets/vendor/js/menu.js"></script>
<script src="../assets/js/main.js"></script>
<script>
    //API: Obtenir une image alÃ©atoire liÃ©e Ã  l'art depuis Unsplash
    function getRandomArtImage() {
        fetch('https://api.unsplash.com/photos/random?query=art&client_id=-Q19YvSBRRkTHYVp90hGX7joZpRoSIYSq28JRNZPo-o')
            .then(response => response.json())
            .then(data => {
                const imageUrl = data.urls.regular;
                document.getElementById('randomArtImage').src = imageUrl;
            })
            .catch(error => console.error('Erreur lors du chargement de l\'image :', error));
    }

    // Appel de la fonction pour charger une image alÃ©atoire au chargement de la page
    window.onload = getRandomArtImage;
</script>
<script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
