{% extends 'baseBack.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Liste des Utilisateurs</h1>
    
    <div style="margin-bottom: 100px; display:flex; justify-content: center;">
        <a href="{{ path('user_role')}}" class="btn btn-primary" style="margin-right: 20px;">Trier par rôle</a>
        <a href="{{ path('user_date')}}" class="btn btn-primary" style="margin-left: 20px;">Trier par date</a>
    </div>

    <!-- Tableau des utilisateurs -->
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Prename</th>
                <th>interest</th>
                <th>Phone</th>
                <th>IsVerified</th>
                <th>Birthday</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.prename }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.phone }}</td>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                    <td><img src="{{ asset('assets/pdp/' ~ user.image) }}" alt="User Image"></td>
                    <td>
                        <button class="btn btn-primary">
                            <a href="{{ path('app_user2_show', {'id': user.id}) }}">Show</a>
                        </button>
                        <button class="btn btn-primary">
                            <a href="{{ path('app_user2_edit', {'id': user.id}) }}">Edit</a>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <button class='btn btn-primary'><a href="{{ path('listePdf') }}">pdf</a></button>
{% endblock %}
