{% extends 'baseBack.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('assets/pdp/' ~ user.image) }}" alt="User Image"></td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prename</th>
                <td>{{ user.prename }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <btn class='btn btn-primary'> <a href="{{ path('app_user2_index') }}">back to list</a></btn>

    <btn class='btn btn-primary'><a href="{{ path('app_user2_edit', {'id': user.id}) }}">edit</a></btn>

    {{ include('user2/_delete_form.html.twig') }}
{% endblock %}
